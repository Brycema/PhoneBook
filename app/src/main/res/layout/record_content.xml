<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">


    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:fadingEdge="vertical"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:text="@string/record"
        android:textAlignment="textStart"
        android:textColor="@color/text_black"
        android:textSize="36sp"
        android:typeface="sans" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/record_bar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/show_title"
        android:layout_marginLeft="45dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_all"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="所有通话"
            android:textAlignment="textEnd"
            android:background="@drawable/record_tab_bg"
            android:textColor="@drawable/record_tab_menu"
            android:textSize="24sp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/record_unpick"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="未接来电"
            android:textAlignment="textStart"
            android:background="@drawable/record_tab_bg"
            android:textColor="@drawable/record_tab_menu"
            android:textSize="24sp"
            android:clickable="true"
            android:focusable="true"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_record_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/show_title"
        android:layout_below="@+id/record_bar"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/record"
        android:textColor="@color/text_black"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/record_bar"
        android:id="@+id/record_framebar"
        android:layout_centerHorizontal="true">

    </FrameLayout>


</RelativeLayout>